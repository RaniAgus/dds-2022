@startuml iteracion-2

class Borrador {
  tipo
  conTela(tela)
  conTrama(trama)
  conColorPrimario(colorPrimario)
  conColorSecundario(colorSecundario)
  crearPrenda()
}

Borrador ..> Prenda

class Prenda {
}

Prenda "tipo" -left-> Tipo
Prenda "tela" --> Tela
Prenda "trama" --> Trama
Prenda "colorSecundario\n(opcional)" -right-> Color
Prenda "colorPrincipal" -right-> Color

enum Tela {
  ALGODON,
  CUERO,
  LANA,
  JEAN,
  ...
}

enum Trama {
  LISA,
  RAYADA,
  LUNARES,
  CUADROS,
  ESTAMPADO
}

class Color {
}

enum Tipo {
  ANTEOJOS,
  ZAPATOS,
  ...
  esTelaValida(tela)
}

Tipo "telasValidas" --> "*" Tela
Tipo "categoria" -left-> Categoria

enum Categoria {
  CALZADO
  PARTE_SUPERIOR,
  PARTE_INFERIOR,
  ACCESORIO
}

@enduml
